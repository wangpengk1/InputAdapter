<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_bg">
    <TextView
        android:id="@+id/list_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="8dp"
        android:text="请选择"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_image_img0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15sp"
        android:background="@drawable/ripple_bg"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/list_image_title"
        app:layout_constraintTop_toBottomOf="@+id/list_image_title"
        app:srcCompat="@drawable/btn_jpg_add" />

    <ImageView
        android:id="@+id/list_image_img1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        app:layout_constraintStart_toEndOf="@+id/list_image_img0"
        app:layout_constraintTop_toTopOf="@+id/list_image_img0"/>

    <ImageView
        android:id="@+id/list_image_img2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        app:layout_constraintStart_toEndOf="@+id/list_image_img1"
        app:layout_constraintTop_toTopOf="@+id/list_image_img0"/>


    <ImageView
        android:id="@+id/list_image_img3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ripple_bg"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_image_img2"
        app:layout_constraintTop_toTopOf="@+id/list_image_img0" />
</androidx.constraintlayout.widget.ConstraintLayout>