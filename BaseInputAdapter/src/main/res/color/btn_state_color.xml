<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 不可用时 -->
    <item android:color="@android:color/darker_gray" android:state_enabled="false" />
    <!-- 按压时 -->
    <item android:color="@android:color/holo_red_dark" android:state_pressed="true" />
    <!-- 被选中时 -->
    <item android:color="@android:color/holo_green_dark" android:state_selected="true" />
    <!-- 被激活时 -->
    <item android:color="@android:color/holo_green_light" android:state_activated="true" />
    <!-- 默认时 -->
    <item android:color="@color/deepskyblue" />
</selector>